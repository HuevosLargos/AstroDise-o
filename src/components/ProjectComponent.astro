---
export interface Props {
  Title: string;
  Description: string;
  Image: string;
  Url: string;
}

const { Title, Description, Image, Url } = Astro.props;
---

<article class="card">
  <a href={Url}>
    <div class="Card-Padding">
      <img src={Image} alt="" ' class="CardIMG" />
      <h3 class="Card-title">
        {Title}<br />
        <span class="Card-Subtitle">{Description}</span>
      </h3>
    </div>
  </a>
</article>

<style>
  .card {
    width: 47%;
    background-color: rgb(249, 248, 248);
    border-radius: 10px;
    transition: background-color 0.1s ease-in-out;
  }
  .card:hover {
    background-color: rgb(238, 238, 238);
    transition: background-color 0.1s ease-in-out;
  }
  .CardIMG {
    min-width: 100px;
    width: 100%;
    border-radius: 13px;
  }
  .Card-Padding {
    padding: 30px;
  }
  .Card-title {
    font-size: 19px;
    font-weight: 600;
    line-height: 1.3;
    color: black;
  }
  .Card-Subtitle {
    font-size: 17px;
    font-weight: 300;
    color: rgb(139, 139, 139);
    font-family: sans-serif;
  }
  a {
    text-decoration: none;
  }
  #Projects_Subtitle {
    font-size: 18px;
    font-weight: 300;
    color: rgb(85, 85, 85);
  }
</style>
